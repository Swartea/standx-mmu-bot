CHAIN=bsc
WALLET_PRIVATE_KEY=REPLACE_ME

SYMBOL=BTC-USD

# qty (per order)
QTY_WANT=0.0001

# BPS params (keep within 10 bps)
TARGET_BPS=9
MAX_BPS=9.2
MIN_BPS=4.5

# ladder
LADDER_LEVELS=1
LADDER_STEP_BPS=0.25

# loop
LOOP_MS=15000
MIN_REFRESH_MS=20000

# order check
ORDER_CHECK_MS=15000
STOP_ON_FILL=1

TIME_IN_FORCE=alo

# optional: qty jitter (risk smoothing)
QTY_JITTER_PCT=0

# optional: fixed USD spread mode (override BPS)
ABS_SPREAD_USD=0
ABS_MIN_USD=0
ABS_MAX_USD=0

# optional: volatility pause
VOL_PAUSE_BPS=0
VOL_RESUME_BPS=0
VOL_PAUSE_MS=60000
VOL_STABLE_TICKS=2
VOL_CANCEL_ON_PAUSE=1
